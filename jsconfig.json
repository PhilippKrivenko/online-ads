{
  "compilerOptions": {
    "target": "es6",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "@ui/*": [
        "src/components/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@api/*": [
        "src/api/*"
      ],
      "@assets/*": [
        "src/assets/img/*"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@hocs/*": [
        "src/hocs/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],

      "@mocks/*": [
        "src/__mocks__/*"
      ],

      "@pages/*": [
        "src/pages/*"
      ],
      "@widgets/*": [
        "src/widgets/*"
      ],
      "@features/*": [
        "src/features/*"
      ],
      "@entities/*": [
        "src/entities/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
